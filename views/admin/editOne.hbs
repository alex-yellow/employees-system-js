<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">Step 1: Choose Department</div>
                <div class="card-body">
                    <form method="post" action="/admin/editOne/{{ employee.id }}">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{ employee.name }}" required>
                        </div>
                        <div class="form-group">
                            <label for="salary">Salary:</label>
                            <input type="number" class="form-control" id="salary" name="salary" value="{{ employee.salary }}" required>
                        </div>
                        <div class="form-group">
                            <label for="department">Department:</label>
                            <select class="form-control" id="department" name="department_id" required>
                                {{#each departments}}
                                <option value="{{ id }}" {{#eq id employee.department_id}}selected{{/eq}}>{{ name }}</option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Next</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>